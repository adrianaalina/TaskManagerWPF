<Window x:Class="TaskManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Grid>
                <TextBox x:Name="txtTitlu" Text="{Binding CurrentTask.Titlu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="80" Margin="3" />
                <TextBlock Text="Scrie titlu" Foreground="Gray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{Binding Text, ElementName=txtTitlu, Converter={StaticResource EmptyStringToVisibilityConvert}}" />
            </Grid>

            <Grid>
                <TextBox x:Name="txtDescriere" Text="{Binding CurrentTask.Descriere, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="80" Margin="3" />
                <TextBlock Text="Scrie descriere" Foreground="Gray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{Binding Text, ElementName=txtDescriere, Converter={StaticResource EmptyStringToVisibilityConvert} }" />
            </Grid>


            <DatePicker Name="datePickerDeadline"  Width="100" Margin="3"  SelectedDate="{Binding CurrentTask.Deadline,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Grid>
                <TextBox Name="txtOra"  Text="{Binding Ora, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50" Margin="3"/>
                <TextBlock Text="Ora" Foreground="Gray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{ Binding Text, ElementName=txtOra,Converter={StaticResource EmptyStringToVisibilityConvert}}"/>
            </Grid>

            <Grid>
                <TextBox Name="txtMinut" Text="{Binding Minut, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Width="50" Margin="3" />
                <TextBlock Text="Minut" Foreground="Gray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{ Binding Text, ElementName=txtMinut,Converter={StaticResource EmptyStringToVisibilityConvert}}"/>
            </Grid>

            <Grid>
                <ComboBox x:Name="categorieComboBox"  ItemsSource="{Binding Categorii}"
                          SelectedItem="{Binding CurrentTask.Categorie, Mode=TwoWay}"
                           Margin="3" />
            <TextBlock  Text="Categorie:" Foreground="DarkSlateGray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{ Binding Text, ElementName=categorieComboBox,Converter={StaticResource EmptyStringToVisibilityConvert}}" Width="50"  /> 
            </Grid>
            
            <Grid>
                <ComboBox x:Name="statusComboBox" ItemsSource="{Binding Statusuri}"
                          SelectedItem="{Binding CurrentTask.Status, Mode=TwoWay}"
                           Margin="3"/>
                <TextBlock Text="Status:" Foreground="DarkSlateGray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{ Binding Text, ElementName=statusComboBox,Converter={StaticResource EmptyStringToVisibilityConvert}}" Width="45"  />
            </Grid>
            
            <Grid>
                <ComboBox x:Name="prioritateComboBox" ItemsSource="{Binding Prioritati}" Margin="3"
                          SelectedItem="{Binding CurrentTask.Prioritate, Mode=TwoWay}"/>
                <TextBlock Text="Prioritate:" Foreground="DarkSlateGray" IsHitTestVisible="False" Margin="10,5,0,0" Visibility="{ Binding Text, ElementName=prioritateComboBox,Converter={StaticResource EmptyStringToVisibilityConvert}}" Width="45" />
            </Grid>

            <Grid Height="291" Width="105">
                <Button Content="Sterge Task"
                        Command="{Binding DeleteCommand}"
                        Width="100"
                        Height="30"
                        Margin="0, 90 ,0,30"/>
               
            <Button Content="Salveaza" Command="{Binding DataContext.AddCommand, RelativeSource={RelativeSource AncestorType=Window}}" Width="100" Height="30" Margin="0,0,0,90"/> 
            </Grid> 

            <ListBox x:Name="taskuri" SelectedItem="{Binding SelectedTask, Mode=TwoWay}" ItemsSource="{Binding TaskuriC }" Width="200" Height="300" Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Border Background="{Binding BackgroundColor}" CornerRadius="6" Padding="4" Margin="2">
                                <StackPanel>
                                    <TextBlock Text="{Binding Titlu}" FontWeight="Bold" />
                                    <TextBlock Text="{Binding Descriere}" FontStyle="Italic"/>
                                    <TextBlock Text="{Binding Deadline, StringFormat='Deadline:{0:dd/MM/yyyy HH:mm}'}"/>
                                    <TextBlock Text="{Binding Status}" FontStyle="Italic"/>
                                    <TextBlock Text="{Binding Categorie}" FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>


    </Grid>
</Window>
